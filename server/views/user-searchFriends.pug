extends _layout
block site-title
    | Friends
block style
    link(rel="stylesheet" href="/static/css/user-friends.css")
block container
    div(class="search")
        form(id="search-form" method="post" action=`/friends` class="form-inline")
            div(class="form-group")
                label(for="search")
                input(type="text" name="search" id="search" class="search form-control col-sm-6")
                input(type="submit" class="btn btn-default form-control col-sm-2" value="Search")
    div(class="row col-sm-5")
        ul(id="list")
            if searchFriends.length
                each user in searchFriends
                    li(class="user row col-sm-12 col-sm-offset-1")
                        img(src=user.image class="col-sm-3")
                        div.user-info.col-sm-8
                            a(href="/users/" + user.username + "/profile" class="col-sm-12") Username: #{user.username}
                            a(href="/users/" + user.username + "/profile" class="col-sm-12") Name: #{user.fullname}    
                            