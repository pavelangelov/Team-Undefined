doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title
            | Ninja`s Social Network:
            block site-title
        block style
        link(href="https://fonts.googleapis.com/css?family=Ravi+Prakash" rel="stylesheet")
        link(rel="stylesheet" href="/static/bower_components/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="/static/css/layout.css")

    body
    div(id="pos-fixed")
            header(id="header" class="row")
                h1(class="col-sm-6") Ninja`s Social Network
                div(id="user-info" class=" col-sm-5")
                    div(class="row")
                        div(class="user-image col-sm-1 col-sm-offset-8")
                            img(src=user.image alt="" class="profile-picture")
                        if !user.isAnonymous
                            a(href="/profile" class="username col-sm-3") #{user.username}
                        else
                            span.username.col-sm-3 #{user.username}
            nav(id="nav")
                ul(id="nav-list" class="row")
                    if !user.isAnonymous
                        li(class="nav-list-item col-sm-3")
                            a(href="/friends") Search Friends
                        li(class="nav-list-item col-sm-3")
                            a(href="/messages") Messages
                        li(class="nav-list-item col-sm-3")
                            a(href="/about") About us
                        li(class="nav-list-item col-sm-3")
                            a(href="/logout") Logout
                    else
                        li(class="nav-list-item col-sm-4")
                            a(href="/users") Search people
                        li(class="nav-list-item col-sm-4")
                            a(href="/about") About us
                        li(class="nav-list-item col-sm-4")
                          a(href="/") Login or Register
    #container.col-sm-12
        block container