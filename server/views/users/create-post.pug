extends ../_layout
block site-title
    | Create-post
block container
    form.row.col-sm-6.col-sm-offset-3(action=`/create-post/${reciever.username}` method="POST")
        textarea.form-control(rows="4" cols="50" name="content")
        input(type="hidden" name="id" value=`${reciever._id}`)
        input.btn.btn-primary.form-control(type="submit" value="Submit Post")
